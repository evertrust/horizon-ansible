events {
  worker_connections  4096;
}

http {
  proxy_buffering    off;
  proxy_set_header   X-Real-IP $remote_addr;
  proxy_set_header   X-Forwarded-Proto $scheme;
  proxy_set_header   X-Forwarded-Host $host:9000;
  proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_set_header   Host $host;
  proxy_http_version 1.1;

  server {
    listen       80;
    server_name  _;

    client_header_buffer_size   64k;
    large_client_header_buffers 4 64k;

    resolver 127.0.0.11 ipv6=off valid=10s;

    rewrite ^/$ /ui#/ra redirect;

    location / {
      set        $horizon ${HORIZON_HOST}:9000;
      proxy_pass http://$horizon;
    }
  }

  server {
    listen       443 ssl;
    server_name  _;

    # Rewrite header only on https to allow cert auth by headers on 80 - TEST PURPOSES ONLY
    proxy_set_header   SSL_CLIENT_CERT $ssl_client_escaped_cert;

    ssl_certificate           /var/ssl/cert.pem;
    ssl_certificate_key       /var/ssl/key.pem;
    ssl_session_timeout       10m;
    ssl_session_cache         shared:SSL:10m;
    ssl_protocols             TLSv1.2 TLSv1.3;
    ssl_ciphers               HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_verify_client         optional_no_ca;
    ssl_verify_depth          10;

    client_header_buffer_size   64k;
    large_client_header_buffers 4 64k;

    rewrite ^/$ /ui#/ra redirect;

    resolver 127.0.0.11 ipv6=off valid=10s;

    location / {
      set        $horizon ${HORIZON_HOST}:9000;
      proxy_pass http://$horizon;
    }
  }
}
